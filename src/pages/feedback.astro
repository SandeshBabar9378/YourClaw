---
import Layout from "../layouts/Layout.astro";
---
<Layout>
    <div class="md:h-20 h-0"></div>
    <div class="relative md:static w-screen h-[70vh] flex justify-center items-center">
        <div class="md:w-[50%] w-[90%] h-[95%] bg-redish rounded-2xl shadow-xl flex justify-center items-center">
            <form class="md:w-[50%] flex flex-col gap-4 ">
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="name" id="name" class="block py-2.5 px-0 w-full text-xl text-white bg-transparent border-0 border-b-2 border-blackish appearance-none focus:outline-none peer" placeholder=" " required />
                    <label for="name" class="peer-focus:font-medium absolute text-xl  font-semibold text-blackish duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Name</label>
                </div>
                
                <div class="relative z-0 w-full mb-5 group">
                    <input type="email" name="email" id="email" class="block py-2.5 px-0 w-full text-xl text-white bg-transparent border-0 border-b-2 border-blackish appearance-none focus:outline-none peer" placeholder=" " required />
                    <label for="email" class="peer-focus:font-medium absolute text-xl  font-semibold text-blackish duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Email</label>
                </div>
                
                
                <div class="relative z-0 w-full mb-5 ">
                    <label for="message" class="block mb-2 text-xl font-semibold text-blackish ">Your message</label>
                    <textarea id="message" rows="4" class="block p-2.5 w-full text-white text-lg bg-gray-500 rounded-lg border border-gray-300 focus:outline-none" placeholder="Leave a comment..."></textarea>
                </div>
  

                <button type="submit" class="text-white bg-blackish hover:bg-black focus:ring-4 focus:outline-none focus:ring-blue-300 text-base font-medium rounded-lg w-[50%] md:w-[50%] px-5 py-2.5 text-center ">Submit</button>
            </form>
        </div>
    </div>
    <div class="h-20 md:h-0"></div>
</Layout>