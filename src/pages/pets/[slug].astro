---
import Layout from "../../layouts/Layout.astro";
const { slug } = Astro.params;
const response = await fetch(`https://claw-backend-omega.vercel.app/api/pets/${slug}`);
const petData = await response.json();
if (!petData) {
    throw new Error(`Pet with slug "${slug}" not found.`);
}
---
<Layout>
    <div class="flex items-center justify-center py-10">
        <div class="max-w-2xl w-full bg-white shadow-lg rounded-lg p-6">
            <!-- Pet Image -->
            <div class="flex justify-center mb-6">
                <img 
                    src={petData.pet_image} 
                    alt={petData.pet_name} 
                    class="rounded-lg shadow-md w-full h-auto max-h-80 object-cover"
                />
            </div>
            
            <!-- Pet Details -->
            <h1 class="text-3xl font-bold text-gray-800 text-center mb-4">
                {petData.pet_name}
            </h1>
            
            <ul class="text-gray-600 space-y-2">
                <li>
                    <strong class="text-gray-800">Breed:</strong> {petData.pet_breed}
                </li>
                <li>
                    <strong class="text-gray-800">Color:</strong> {petData.pet_color}
                </li>
                <li>
                    <strong class="text-gray-800">Age:</strong> {petData.pet_age}
                </li>
                <li>
                    <strong class="text-gray-800">Weight:</strong> {petData.pet_weight}
                </li>
                <li>
                    <strong class="text-gray-800">About:</strong> {petData.pet_bio}
                </li>
                <li>
                    <strong class="text-gray-800">Address:</strong> {petData.pet_address}
                </li>
            </ul>
        </div>
    </div>
</Layout>

