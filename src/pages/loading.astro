---
import Layout from "../layouts/Layout.astro"
---
<Layout>

<div class="h-[100vh] w-[100vw] flex justify-center items-center bg-gray-500">
  <!--container -->
  <div class="h-[70%] w-[70%] flex flex-row justify-between rounded-lg bg-white relative">
    <div class="h-[100%] w-[50%] bg-redish rounded-l-lg p-2 flex justify-center items-center text-9xl font-black">
        Register
    </div>
    <div class="h-[100%] w-[50%] bg-blackish rounded-r-lg  p-2 flex justify-center items-center text-9xl font-black">
       Login
    </div>
    <div id="register" class="h-[100%] w-[49%] absolute top-0 right-0 bg-black z-[2] flex justify-center items-center transition-all duration-[2s] opacity-100">
      <button id="Registerbutton" class="bg-white h-[25%] w-[50%] font-bold text-4xl rounded-3xl shadow-white shadow-lg border-black border-[2px]">Login</button>
    </div>
    <div id="login" class="h-[100%] w-[49%] absolute top-0 left-0 bg-black z-[2] flex justify-center items-center transition-all duration-[2s] opacity-100">
      <button id="Loginbutton" class="bg-white h-[25%] w-[50%] font-bold text-4xl rounded-3xl shadow-white shadow-lg border-black border-[2px]">Register</button>
    </div>

    </div>
    </div>
    </Layout>

    <script is:inline>
    function toggle() {
      let isLeftVisible = false;

      const toggleLeft = document.getElementById('register');
      const toggleRight = document.getElementById('login');

      // Initially hide the left div
      toggleLeft.style.display = 'none';
      toggleRight.style.display = 'flex';

      document.getElementById('Registerbutton').addEventListener('click', () => {
      if (isLeftVisible) {
        toggleLeft.style.transform = 'translateX(-100%)';
        toggleLeft.style.opacity = '0';
        setTimeout(() => {
        toggleLeft.style.display = 'none';
        toggleRight.style.display = 'flex';
        toggleRight.style.transform = 'translateX(0)';
        toggleRight.style.opacity = '1';
        isLeftVisible = false;
        }, 2000); // Match the duration of the transition
      }
      });

      document.getElementById('Loginbutton').addEventListener('click', () => {
      if (!isLeftVisible) {
        toggleRight.style.transform = 'translateX(100%)';
        toggleRight.style.opacity = '0';
        setTimeout(() => {
        toggleRight.style.display = 'none';
        toggleLeft.style.display = 'flex';
        toggleLeft.style.transform = 'translateX(0)';
        toggleLeft.style.opacity = '1';
        isLeftVisible = true;
        }, 2000); // Match the duration of the transition
      }
      });
    }

    toggle();
    </script>




