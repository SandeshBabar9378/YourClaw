<style>
    .alert-box {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(0, 0, 0, 0.8);
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        text-align: center;
        z-index: 1000;
        display: none;
    }

    .alert-box.active {
        display: block !important;
    }

    .alert-box button {
        margin-top: 10px;
        padding: 8px 15px;
        background: #ff4b4b;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 5px;
    }

    .alert-box button:hover {
        background: #ff1f1f;
    }
</style>

<div id="custom-confirm" class="alert-box">
    <p id="confirm-message"></p>
    <div class="flex gap-4 justify-center">
        <button id="alert-yes">Yes</button>
        <button id="alert-no">No</button>
    </div>
</div>

<script is:inline>
    function customConfirm(message) {
        return new Promise((resolve) => {
            document.getElementById("confirm-message").innerText = message;
            document.getElementById("custom-confirm").classList.add("active");

            document.getElementById("alert-yes").onclick = function () {
                document
                    .getElementById("custom-confirm")
                    .classList.remove("active");
                resolve(true);
            };

            document.getElementById("alert-no").onclick = function () {
                document
                    .getElementById("custom-confirm")
                    .classList.remove("active");
                resolve(false);
            };
        });
    }
</script>
